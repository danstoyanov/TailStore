<!DOCTYPE html>
<html lang="en">
<head class="bg-orange-100">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TailStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Calistoga&display=swap" rel="stylesheet">
</head>
<body class="bg-orange-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-orange-100 border-bottom box-shadow mb-3">
            <div class="container">
                <button class="btn-link" asp-controller="Home" asp-action="Index">
                    <img src="~/imgs/TailStore.png" class="h-8 mr-3" asp-area="" asp-controller="Home" asp-action="Index" />
                </button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="mr-3">
                            <a class="nav-link text-dark hover:underline" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="mr-3">
                            <a class="nav-link text-dark hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="mr-3">
                            <a class="nav-link text-dark hover:underline" asp-area="" asp-controller="Test" asp-action="Test">🧪 Test Page</a>
                        </li>
                        <li class="mr-3">
                            <a class="nav-link text-dark hover:underline" asp-area="" asp-controller="Product" asp-action="ListedProducts">Products</a>
                        </li>
                        <li class="mr-3">
                            <a class="nav-link text-dark hover:underline" asp-area="" asp-controller="Product" asp-action="AddProduct">Add Products</a>
                        </li>
                        <li class="mr-3">
                            <a class="nav-link text-dark hover:underline" asp-area="" asp-controller="Blog" asp-action="BlogView">Blog</a>
                        </li>
                        <li class="mr-3">
                            <a class="nav-link text-dark hover:underline" asp-area="" asp-controller="Product" asp-action="ListedProducts">Dashboard</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer bg-orange-100 text-muted">
        <div class="bg-orange-100 flex items-center justify-center">
            &copy; 2023 - TailStore. All Rights Reserved.
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
